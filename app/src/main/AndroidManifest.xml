                <data android:mimeType="*/*" />
            </intent-filter>
            -->

            <!-- Test Loop Intent -->
            <!--
            <intent-filter>
                <action android:name="com.google.intent.action.TEST_LOOP"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/javascript"/>
            </intent-filter>
            -->
          
        </activity>
    </application>

</manifest>
